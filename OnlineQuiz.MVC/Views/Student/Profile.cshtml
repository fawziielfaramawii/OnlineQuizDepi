<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizTech | Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #e9eef5;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            background-color: #1a1a2e;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #ffffff;
                transition: background-color 0.3s ease;
                padding: 1rem;
                border-radius: 8px;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #27293d;
                }

        .brand-logo h2 {
            font-size: 1.8rem;
            color: #ffffff;
            text-align: center;
            padding: 2rem 0;
        }

        .widget {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
            padding: 1rem;
        }

            .widget:hover {
                transform: translateY(-5px);
            }

        .main-content {
            padding: 2.5rem;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-3px);
            }

        .card-header,
        .card-body,
        .card-title {
            color: #495057;
        }

        .btn-warning {
            background-color: #ffc107;
            border: none;
            padding: 0.7rem 1.5rem;
            font-size: 1.1rem;
            border-radius: 5px;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        .progress {
            height: 0.8rem;
            border-radius: 8px;
        }

        table.table-bordered th,
        table.table-bordered td {
            color: #333;
        }

        h1.h2 {
            font-weight: bold;
            color: #333;
            text-align: left;
        }
    </style>
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="brand-logo">
                    <h2>QuizMaster</h2>
                </div>
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profile", "Student")">
                                <i class="bi bi-bar-chart me-2"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Student")">
                                <i class="bi bi-house me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyQuizzes", "Student")">
                                <i class="bi bi-book me-2"></i> My Quizzes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyInstructors", "Student")">
                                <i class="bi bi-file-earmark-text me-2"></i> My Instructors
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Student Profile</h1>
                </div>

                <div class="student-profile py-4">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card text-center">
                                <div class="card-header bg-transparent">
                                  @*   <img class="profile_img" src="@Model?.ImgUrl ??" alt="Student Image" class="rounded-circle mb-3" style="width: 120px; height: 120px;"> *@
                                    <h3>@Model.UserName</h3>
                                </div>
                                <div class="card-body">
                                    <p><strong>Student ID:</strong> @Model.Id</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header bg-transparent">
                                    <h3>General Information</h3>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>Email</th>
                                            <td>@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <th>Address</th>
                                            <td>@Model.Adress</td>
                                        </tr>
                                        <tr>
                                            <th>Gender</th>
                                            <td>@Model.Gender</td>
                                        </tr>
                                        <tr>
                                            <th>Grade</th>
                                            <td>@Model.Grade</td>
                                        </tr>
                                        <tr>
                                            <th>Age</th>
                                            <td>@Model.Age</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Edit", "Student", new { id = Model.Id })" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

</body>

</html>
