@model OnlineQuiz.BLL.Dtos.StudentDtos.StudentDetailesDto
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizTech | Dashboard</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="author" content="Codeconvey" />

    <!-- CSS Links -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Raleway', sans-serif;
            color: #222;
        }

        h2 {
            color: #333;
            font-size: 26px;
            font-weight: 700;
        }

        .sidebar {
            background-color: #343a40;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #ffffff;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #495057;
                    border-radius: 8px;
                }

        .brand-logo h2 {
            font-size: 1.8rem;
            color: #ffffff;
            text-align: center;
            padding: 1.5rem 0;
        }

        .main-content {
            padding: 2rem;
        }

        .profile_img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 10px solid #ccc;
            border-radius: 50%;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar for larger screens and Navbar for small screens -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar d-none d-md-block">
                <div class="brand-logo">
                    <h2 class="text-white">QuizMaster</h2>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Student")">
                            <i class="bi bi-house me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Profile">
                            <i class="bi bi-bar-chart me-2"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="MyQuizzes">
                            <i class="bi bi-book me-2"></i> My Quizzes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="MyInstractors">
                            <i class="bi bi-file-earmark-text me-2"></i> My Instructors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="LogoutConfirmation">
                            <i class="bi bi-door-open me-2"></i> LogOut
                        </a>
                    </li>
                </ul>
            </nav>

          

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">My Profile</h1>
                </div>
                <section>
                    <div class="student-profile py-4">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="card shadow-sm">
                                        <div class="card-header bg-transparent text-center">
                                            <img id="profileImage" class="profile_img rounded-circle" src="~/@Model.ImgUrl" alt="" onerror="this.onerror=null; this.src='@Url.Content("~/Images/th.jpeg")';">
                                            <h3 class="mt-3">@Model.UserName</h3>
                                        </div>
                                        <div class="card-body">
                                            <p class="mb-0"><strong>Student ID:</strong> @Model.Id</p>
                                            <p class="mb-0"><strong>Grade:</strong> @Model.Grade</p>
                                            <hr />
                                        </div>
                                    </div>
                                    <!-- Image Upload Form -->
                                    <form asp-action="UploadProfilePicture" asp-controller="Student" enctype="multipart/form-data" method="post">
                                        <div class="form-group mt-3">
                                            <input type="file" name="ProfilePicture" class="form-control" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-2">Upload Photo</button>
                                    </form>
                                </div>


                                <!-- General Information -->
                                <div class="col-lg-8">
                                    <div class="card shadow-sm">
                                        <div class="card-header bg-transparent border-0">
                                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i> General Information</h3>
                                        </div>
                                        <div class="card-body pt-0">
                                            <table class="table table-bordered">
                                                <tr><th width="30%">Role</th><td width="2%">:</td><td>@Model.UserType</td></tr>
                                                <tr><th width="30%">Age</th><td width="2%">:</td><td>@Model.Age</td></tr>
                                                <tr><th width="30%">Gender</th><td width="2%">:</td><td>@Model.Gender</td></tr>
                                                <tr><th width="30%">Email</th><td width="2%">:</td><td>@Model.Email</td></tr>
                                                <tr><th width="30%">Phone Number</th><td width="2%">:</td><td>@Model.PhoneNumber</td></tr>
                                                <tr><th width="30%">Address</th><td width="2%">:</td><td>@Model.Adress</td></tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Edit Profile Button -->
                            <div class="row mt-4 justify-content-center mb-5">
                                <div class="col-auto">
                                    <a href="@Url.Action("Edit", "Student", new { id = Model.Id })" class="btn btn-secondary">Edit Profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>

    <!-- JavaScript Links -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
