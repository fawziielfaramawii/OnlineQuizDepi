@using OnlineQuiz.BLL.Dtos.Quiz
@using OnlineQuiz.DAL.Data.Models
@model IEnumerable<Quizzes>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizTech | ALL QUIZZES</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Arial', sans-serif;
        }

        h1 {
            color: #333;
            font-weight: 700;
            margin-bottom: 2rem;
            position: relative;
            text-align: center;
        }

            h1::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 50px;
                height: 4px;
                background-color: #007bff; /* Primary color */
            }

        .quiz-card {
            background-color: #fff;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            margin: 15px 0; /* Spacing between cards */
            position: relative;
        }

            .quiz-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .card-subtitle {
            font-size: 1.2rem;
            color: #007bff;
            margin-bottom: 1rem;
        }

        .card-text {
            color: #666;
            margin-bottom: 1rem;
        }

        .badge {
            font-weight: 500;
            padding: 0.5em 1em;
            border-radius: 20px;
            margin-right: 0.5rem;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: none;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-start-quiz {
            background-color: #28a745; /* Green */
            border: none;
            color: white;
            font-weight: bold;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-start-quiz:hover {
                background-color: #218838; /* Darker green */
                transform: scale(1.05);
            }

        .quiz-info {
            font-size: 0.9rem;
            color: #666;
        }

            .quiz-info i {
                color: #007bff;
                margin-right: 0.25rem;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1>Explore Our Quizzes</h1>
        <div id="quizList" class="row">
            @if (Model.Any())
            {
                @foreach (var quiz in Model)
                {
                    <div class="col-md-4">
                        <div class="card quiz-card">
                            <div class="card-body">
                                <h5 class="card-title">@quiz.Tittle</h5>
                                <h6 class="card-subtitle">@quiz.Description</h6>
                                @* <p class="card-text">@quiz.Description</p> *@
                                <span class="badge bg-light text-dark">Diffecult</span>
                                <span class="badge bg-light text-dark">
                                    <i class="fas fa-trophy"></i> @quiz.QuizDegree
                                </span>
                            </div>
                            <div class="card-footer">
                                <div class="quiz-info">
                                    <span><i class="fas fa-clock"></i> @quiz.ExamTime mins</span>
                                    
                                </div>
                                <a href="/Student/GetQuestions?quizId=@quiz.Id">
                                    <button class="btn btn-start-quiz">Start Quiz</button>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-4">
                    <div class="quiz-card" style="background: #f0f2f5;">
                        <div class="card-body text-center">
                            <p style="font-size: 1.5rem; color: #888;">No Quiz Yet</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
