<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar bg-dark">
                <div class="position-sticky">
                    <ul class="nav flex-column mt-4">
                        <li class="nav-item">
                            <a class="nav-link" href="#quizzes">
                                <i class="bi bi-list-check"></i> Available Quizzes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#instructors">
                                <i class="bi bi-person"></i> Instructors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#degrees">
                                <i class="bi bi-graph-up"></i> Quiz Degrees
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h1 class="mt-4">Student Dashboard</h1>

                <!-- Available Quizzes Section -->
                <section id="quizzes" class="my-4">
                    <h2>Available Quizzes</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Quiz Name</th>
                                <th scope="col">Instructor Name</th>
                                <th scope="col">Degree</th>
                                <th scope="col">Attempt</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Math Basics</td>
                                <td>John Doe</td>
                                <td>100</td>
                                <td><a href="/Student/AttemptQuiz" target="_blank" class="btn btn-primary">Attempt Quiz</a></td>
                            </tr>
                            <tr>
                                <td>History</td>
                                <td>Jane Smith</td>
                                <td>85</td>
                                <td><a href="/Student/AttemptQuiz" target="_blank" class="btn btn-primary">Attempt Quiz</a></td>
                            </tr>
                            <tr>
                                <td>Science</td>
                                <td>Emily Johnson</td>
                                <td>90</td>
                                <td><a href="/Student/AttemptQuiz" target="_blank" class="btn btn-primary">Attempt Quiz</a></td>
                            </tr>
                        </tbody>
                    </table>
                </section>


                <!-- Instructors Section -->
                <section id="instructors" class="my-4">
                    <h2>Instructors</h2>
                    <ul class="list-group">
                        <li class="list-group-item">Mr. Smith - Math Instructor</li>
                        <li class="list-group-item">Ms. Johnson - History Instructor</li>
                        <li class="list-group-item">Dr. Brown - Science Instructor</li>
                    </ul>
                </section>

                <!-- Quiz Degrees Section -->
                <!-- Quiz Degrees Section -->
                <section id="degrees" class="my-4">
                    <h2>Quiz Degrees</h2>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Quiz</th>
                                <th>Degree</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Quiz 1 - Math Basics</td>
                                <td>85%</td>
                            </tr>
                            <tr>
                                <td>Quiz 2 - History</td>
                                <td>90%</td>
                            </tr>
                            <tr>
                                <td>Quiz 3 - Science</td>
                                <td>95%</td>
                            </tr>
                        </tbody>
                    </table>
                </section>

            </main>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
