<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .form-container {
            width: 100%;
            max-width: 400px;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: black;
        }

        .input-group {
            margin-bottom: 15px;
        }

            .input-group label {
                display: block;
                margin-bottom: 5px;
                color: black;
            }

            .input-group input {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        .forgot {
            text-align: right;
            margin-top: 5px;
        }

            .forgot a {
                text-decoration: none;
                color: darkorange;
            }

        .sign {
            width: 100%;
            background-color: darkorange;
            color: black;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            .sign:hover {
                background-color: #e68a00;
            }

        .social-message {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 20px;
        }

        .line {
            width: 27%;
            height: 1px;
            background-color: #ccc;
        }

        .message {
            font-size: 14px;
            margin-top: 12px;
            color: black;
        }

        .social-icons {
            display: flex;
            justify-content: space-around;
            margin-top: 15px;
        }

        .signup {
            text-align: center;
            margin-top: 20px;
            color: black;
        }

            .signup a {
                color: darkorange;
                text-decoration: none;
                font-weight: bold;
            }
    </style>
</head>

@model LoginDto
<body>
    <div class="form-container mx-auto">
        <p class="title">Login</p>
        <!-- Error Message Section -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        <form class="form" asp-action="Login" asp-controller="Home" method="post">


            <!-- Email Input -->
            <div class="input-group">
                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" placeholder="Enter Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="input-group">
                <label asp-for="@Model.Password">Password</label>
                <input asp-for="@Model.Password" placeholder="Enter Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>

            

            </div>
            <!-- Remember Me Checkbox -->
          
                <label asp-for="@Model.RememberMe">Remember Me</label>
                <input asp-for="@Model.RememberMe" type="checkbox">
     

            <div class="forgot">
                <a asp-action="ForgotPassword" asp-controller="Home">Forgot Password?</a>
            </div>
            <button type="submit" class="sign">Sign in</button>
        </form>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

        <div class="social-message">
            <div class="line"></div>
            <p class="message">Login with social accounts</p>
            <div class="line"></div>
        </div>

        <div class="social-icons">
            <button aria-label="Log in with Google" class="btn btn-outline-dark">
                <i class="bi bi-google"></i>
            </button>
            <button aria-label="Log in with Twitter" class="btn btn-outline-dark">
                <i class="bi bi-twitter"></i>
            </button>
            <button aria-label="Log in with GitHub" class="btn btn-outline-dark">
                <i class="bi bi-github"></i>
            </button>
        </div>

        <p class="signup">Don't have an account? <a asp-action="Register" asp-controller="Home">Sign up</a></p>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
