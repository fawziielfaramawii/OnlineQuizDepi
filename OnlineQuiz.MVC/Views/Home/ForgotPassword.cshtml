<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .form-container {
            width: 100%;
            max-width: 500px; /* Increased max-width */
            background-color: white;
            padding: 30px; /* Increased padding */
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-size: 28px; /* Increased title font size */
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: black;
        }

        .input-group {
            margin-bottom: 20px; /* Increased bottom margin */
        }

            .input-group label {
                display: block;
                margin-bottom: 5px;
                color: black;
            }

            .input-group input {
                width: 100%;
                padding: 12px; /* Increased padding */
                border-radius: 5px;
                border: 1px solid #ccc;
            }

        .message {
            text-align: center;
            margin-top: 10px;
            color: black;
        }

        .sign {
            width: 100%;
            background-color: darkorange;
            color: black;
            border: none;
            padding: 12px; /* Increased padding */
            border-radius: 5px;
            cursor: pointer;
            font-size: 18px; /* Increased font size */
        }

            .sign:hover {
                background-color: #e68a00;
            }

        .login-link {
            text-align: center;
            margin-top: 15px;
            color: black;
        }

            .login-link a {
                color: darkorange;
                text-decoration: none;
                font-weight: bold;
            }
    </style>
</head>
@model ForgotPasswordDto
<body>
    <div class="form-container mx-auto">
        <p class="title">Forgot Password</p>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Message
            </div>
        }
        <form class="form"  asp-for="ForgotPassword" asp-controller="Home" method="POST">
            <div class="input-group">
                <label asp-for="@Model.Email">Email</label>
                <input asp-for="@Model.Email" placeholder="Enter Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="sign">Send Reset Link</button>
        </form>
        <p class="message">We'll send you an email to reset your password.</p>
        <div class="login-link">
            <p>Remembered your password? <a asp-action="Login" asp-controller="Home">Login</a></p>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
