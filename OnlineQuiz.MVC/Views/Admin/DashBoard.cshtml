@model OnlineQuiz.BLL.ViewModels.Admin.SharedStatics

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | QuizTech</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>

    <div class="d-flex">
        <nav class="sidebar p-3">
            <h2 class="text-center text-white">Admin Dashboard</h2>

 

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link active" href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/GetAllQuizzes"><i class="fas fa-clipboard-list"></i> Quizzes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/GetAllInstructors"><i class="fas fa-users"></i> Instructors</a>
                </li>
                <li class="nav-item">
                    
                    <a class="nav-link" href="/Admin/GetAllStudents"><i class="fas fa-user-graduate"></i> Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/NewInstructors"><i class="fas fa-cog"></i> Pinding Instructors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/ManageRoles"><i class="fas fa-cog"></i> Manage Roles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </li>
            </ul>
        </nav>

        <div class="flex-grow-1">
            <header class="header">
                <div class="container">
                    <h1 class="h4">Dashboard</h1>
                </div>
            </header>

            <div class="container mt-4">
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="stat-icon"><i class="fas fa-user-graduate"></i></div>
                                <div class="h5 mb-0">@Model.NumOfStudent</div>
                                <div class="text-uppercase">Total Students</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="stat-icon"><i class="fas fa-clipboard-list"></i></div>
                                <div class="h5 mb-0">@Model.NumOfQuiz</div>
                                <div class="text-uppercase">Total Quizzes</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="stat-icon"><i class="fas fa-chart-bar"></i></div>
                                <div class="h5 mb-0">@Model.NumOfAttempes</div>
                                <div class="text-uppercase">Total Attemptes</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="stat-icon"><i class="fas fa-users"></i></div>
                                <div class="h5 mb-0">@Model.NumOfInstructor</div>
                                <div class="text-uppercase">Total Instructors</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h4>Recent Activity</h4>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Activity</th>
                                            <th>User</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>2023-10-01</td>
                                            <td>Quiz 1 created</td>
                                            <td>Admin</td>
                                        </tr>
                                        <tr>
                                            <td>2023-10-02</td>
                                            <td>User registered</td>
                                            <td>John Doe</td>
                                        </tr>
                                        <tr>
                                            <td>2023-10-03</td>
                                            <td>Quiz 2 completed</td>
                                            <td>Jane Smith</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
