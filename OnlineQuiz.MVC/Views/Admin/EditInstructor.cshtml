@model IstrurctorUpdateDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css'>
    <style>
        body {
            background: linear-gradient(to right, #4ca2cd, #67B26F);
            font-family: 'Lato', sans-serif;
            color: #000;
        }

        .edit-profile .card {
            border-radius: 10px;
            margin-top: 30px;
        }

        .edit-profile .card-header {
            text-align: center;
            font-size: 24px;
            font-weight: 700;
            color: #333;
        }

        .edit-profile .profile_img-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px 0;
        }

        .edit-profile .profile_img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
        }

        .edit-profile .upload-btn {
            margin-top: 10px;
            background-color: #4ca2cd;
            color: #fff;
            border: none;
            font-size: 14px;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .edit-profile .upload-btn:hover {
                background-color: #67B26F;
            }

        .edit-profile .form-group label {
            font-weight: 600;
            color: #333;
        }

        .edit-profile .form-control {
            border-radius: 5px;
        }

        .edit-profile .btn-primary {
            background-color: #4ca2cd;
            border: none;
        }

            .edit-profile .btn-primary:hover {
                background-color: #67B26F;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="edit-profile">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent">
                    <h3>Edit Profile</h3>
                    <p class="text-muted">Update your profile information</p>

                    @*    <div class="profile_img-container">
                    <img id="profileImage" class="profile_img" src="~/images/@Model.ImgUrl" alt="Profile Image">
                    <input type="file" id="imageUpload" name="profileImage" accept="image/*" style="display: none;" onchange="previewImage(event)">
                    <button type="button" class="upload-btn" onclick="document.getElementById('imageUpload').click()">Edit Picture</button>
                    </div >*@
                </div>
                <div class="card-body">
                    <form asp-action="EditInstructor" asp-controller="Admin" method="post">
                        <input type="hidden" asp-for="Id" />
                       

                        <!-- User Name -->
                        <div class="form-group">
                            <label asp-for="UserName">User Name</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Age -->
                        <div class="form-group">
                            <label asp-for="Age">Age</label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>





                        <!-- Address -->
                        <div class="form-group">
                            <label asp-for="Adress">Address</label>
                            <input asp-for="Adress" class="form-control" />
                            <span asp-validation-for="Adress" class="text-danger"></span>
                        </div>

                        <!-- Gender -->
                        <div class="form-group">
                            <label asp-for="Gender">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="1" selected="selected">Male</option>
                                <option value="2">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <!-- Save Changes Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

