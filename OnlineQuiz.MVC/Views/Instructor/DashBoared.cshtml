<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>QuizTech | Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #343a40;
            height: 100vh;
            padding-top: 20px;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                font-size: 16px;
                padding: 15px;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    color: #ffffff;
                    background-color: #495057;
                }

            .sidebar h2 {
                font-size: 24px;
                font-weight: bold;
                color: #ffffff;
            }

        /* Widgets */
        .widget {
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

            .widget h3 {
                font-size: 18px;
                font-weight: 600;
            }

            .widget .stat-number {
                font-size: 28px;
                font-weight: bold;
                color: #343a40;
            }

            .widget .quiz-icon {
                font-size: 40px;
                color: #17a2b8;
                margin-right: 15px;
            }

            .widget:hover {
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
            }

        /* Custom Badges */
        .newbadge {
            background-color: #28a745;
            color: white;
        }

        .newbadge2 {
            background-color: #ffc107;
            color: white;
        }

        /* Top Performers Progress Bar */
        .progress {
            height: 10px;
            border-radius: 5px;
            background-color: #e9ecef;
        }

        .progress-bar {
            background-color: #28a745;
        }

        /* Main Content Header */
        .main-content h1 {
            font-size: 26px;
            font-weight: 700;
            color: #343a40;
        }

        .main-content .btn-primary {
            background-color: #17a2b8;
            border: none;
            font-weight: 600;
            padding: 10px 20px;
        }

            .main-content .btn-primary:hover {
                background-color: #138496;
            }
    </style>
</head>
@model InstructorDashboardVM
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <h2 class="text-center text-white mb-4">QuizTech</h2>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="QuizOfInstructor">
                                <i class="fas fa-question-circle me-2"></i> Quizzes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-chart-bar me-2"></i> Results
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor/MyStudents/@Model.Id">
                                <i class="fas fa-chart-bar me-2"></i>My Students
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor/GetStudents/@Model.Id">
                                <i class="fas fa-users me-2"></i>Add New Student
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-cog me-2"></i> Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@Model.Name</h1>
                    <a asp-controller="Instructor" asp-action="QuizCreation"
                       asp-route-instructorId="@Model.Id"
                       class="btn btn-primary">
                        Create Quiz
                    </a>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <a href="/allquizzes">
                            <div class="widget">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-book quiz-icon"></i>
                                    <div>
                                        <h3>Total Quizzes</h3>
                                        <p class="stat-number">123</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="#">
                            <div class="widget">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users quiz-icon"></i>
                                    <div>
                                        <h3>Registered Students</h3>
                                        <p class="stat-number">456</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="#">
                            <div class="widget">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle quiz-icon"></i>
                                    <div>
                                        <h3>Completed Quizzes</h3>
                                        <p class="stat-number">789</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="widget">
                            <h3>Recent Quizzes</h3>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Quiz Title 1
                                    <span class="badge rounded-pill newbadge">New</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Quiz Title 2
                                    <span class="badge rounded-pill newbadge2">IMP</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Quiz Title 3
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="widget">
                            <h3>Top Performers</h3>
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Student 1</span>
                                        <span>95%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 95%" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Student 2</span>
                                        <span>89%</span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
