<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizTech | Students</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #F0F3F8;
            --secondary: #391560;
            --tertiary: #b12166;
            --action: #f77f00;
            --navbg: rgba(255, 255, 255, 1);
            --fontcolor: black;
            --headingcolor: rgb(7, 10, 17);
        }

        body {
            background-color: var(--primary);
            color: var(--fontcolor);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            background-color: white;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background-color: var(--secondary);
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .btn-primary {
            background-color: var(--action);
            border-color: var(--action);
        }

            .btn-primary:hover {
                background-color: #d46900;
                border-color: #d46900;
            }

        .btn-outline-primary {
            border-color: var(--action);
            color: var(--action);
        }

            .btn-outline-primary:hover {
                background-color: var(--action);
                border-color: var(--action);
                color: white;
            }

        .btn-outline-danger:hover {
            background-color: #d9534f;
            border-color: #d9534f;
        }

        .student-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .table th {
            color: var(--headingcolor);
        }

        .badge {
            font-size: 0.8rem;
        }

        .search-input {
            border: 1px solid var(--action);
        }

            .search-input:focus {
                border-color: var(--tertiary);
                box-shadow: 0 0 0 0.2rem rgba(177, 33, 102, 0.25);
            }
    </style>
</head>

<body>
    <!-- Navigation bar placeholder -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">QuizTech</a>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Registered Students</h2>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="input-group w-50">
                                <input type="text" class="form-control search-input" placeholder="Search students..." id="searchInput">
                                <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i></button>
                            </div>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
                                <i class="bi bi-plus-circle"></i> Add Student
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Quizzes Taken</th>
                                        <th>Average Score</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="studentTableBody">
                                    <!-- Sample Student Rows -->
                                    <tr>
                                        <td>1</td>
                                        <td>
                                            <img src="https://i.pravatar.cc/150?img=1" alt="Student Name" class="student-avatar me-2">
                                            John Doe
                                        </td>
                                        <td>john@example.com</td>
                                        <td>5</td>
                                        <td>88%</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>
                                            <img src="https://i.pravatar.cc/150?img=2" alt="Student Name" class="student-avatar me-2">
                                            Jane Smith
                                        </td>
                                        <td>jane@example.com</td>
                                        <td>8</td>
                                        <td>93%</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></button>
                                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const studentTableBody = document.getElementById('studentTableBody');

            searchInput.addEventListener('input', function () {
                const query = searchInput.value.toLowerCase();
                const rows = studentTableBody.getElementsByTagName('tr');

                Array.from(rows).forEach(row => {
                    const cells = row.getElementsByTagName('td');
                    const nameCell = cells[1]; // Assuming the name is in the second column
                    if (nameCell) {
                        const name = nameCell.textContent.toLowerCase();
                        row.style.display = name.includes(query) ? '' : 'none';
                    }
                });
            });
        });
    </script>
</body>

</html>
