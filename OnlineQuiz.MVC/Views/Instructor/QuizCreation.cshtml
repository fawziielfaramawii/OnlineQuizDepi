@model OnlineQuiz.BLL.Dtos.Quiz.CreatQuizDTO

@{
    ViewData["Title"] = "Quiz Creation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizTech | Create Quiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #391560;
            --primary: #F0F3F8;
            --secondary: #391560;
            --tertiary: #b12166;
            --action: #f77f00;
            --navbg: rgba(255, 255, 255, 1);
            --fontcolor: black;
            --headingcolor: rgb(7, 10, 17);
        }

        body {
            background-color: var(--primary);
            color: var(--fontcolor);
            font-family: 'Arial', sans-serif;
        }

        h1, h2 {
            color: var(--headingcolor);
        }

        .card {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .form-control:focus {
            border-color: var(--tertiary);
            box-shadow: 0 0 0 0.2rem rgba(177, 33, 102, 0.25);
        }

        .btn-dark-orange {
            background-color: var(--action);
            border-color: var(--action);
            color: white;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-dark-orange:hover {
                background-color: #d46900;
                border-color: #d46900;
            }

        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Create Your Quiz</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title mb-4">Quiz Information</h2>
                        <form asp-action="QuizCreation" method="post">
                            <div class="mb-3">
                                <label asp-for="Tittle" class="form-label">Quiz Title</label>
                                <input asp-for="Tittle" class="form-control" placeholder="Enter quiz title" required>
                                <span asp-validation-for="Tittle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="QuizDegree" class="form-label">Quiz Degree</label>
                                <input asp-for="QuizDegree" type="number" class="form-control" placeholder="Enter quiz degree" min="1" required>
                                <span asp-validation-for="QuizDegree" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ExpireDate" class="form-label">Expire Date</label>
                                <input asp-for="ExpireDate" type="datetime-local" class="form-control" required>
                                <span asp-validation-for="ExpireDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IsAvailable" class="form-label">Is Available</label>
                                <select asp-for="IsAvailable" class="form-select" required>
                                    <option value="">Select</option>
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                                <span asp-validation-for="IsAvailable" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ExamTime" class="form-label">Exam Time (in minutes)</label>
                                <input asp-for="ExamTime" type="number" class="form-control" placeholder="Enter exam time" min="1" required>
                                <span asp-validation-for="ExamTime" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="TracksId" class="form-label">Track</label>
                                <select asp-for="TracksId" class="form-select" required>
                                    <option value="">Select a track</option>
                                    @foreach (var track in ViewBag.Tracks)
                                    {
                                        <option value="@track.Id">@track.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="TracksId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="InstructorId" class="form-label">Instructor ID</label>
                                <input asp-for="InstructorId" class="form-control" placeholder="Enter instructor ID" required>
                                <span asp-validation-for="InstructorId" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-dark-orange w-100">Save Quiz Info</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
