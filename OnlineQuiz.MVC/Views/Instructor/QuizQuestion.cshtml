@model OnlineQuiz.BLL.Dtos.Question.createQuestionDto

@{
    ViewData["Title"] = "Question Creation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuizTech | Create Question</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #391560;
            --primary: #F0F3F8;
            --secondary: #391560;
            --tertiary: #b12166;
            --action: #f77f00;
            --navbg: rgba(255, 255, 255, 1);
            --fontcolor: black;
            --headingcolor: rgb(7, 10, 17);
        }

        body {
            background-color: var(--primary);
            color: var(--fontcolor);
            font-family: 'Arial', sans-serif;
        }

        h1, h2 {
            color: var(--headingcolor);
        }

        .card {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .form-control:focus {
            border-color: var(--tertiary);
            box-shadow: 0 0 0 0.2rem rgba(177, 33, 102, 0.25);
        }

        .btn-dark-orange {
            background-color: var(--action);
            border-color: var(--action);
            color: white;
            transition: background-color 0.3s, border-color 0.3s;
        }

            .btn-dark-orange:hover {
                background-color: #d46900;
                border-color: #d46900;
            }

        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Create Your Question</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title mb-4">Question Information</h2>
                        <form asp-action="create" method="post">
                            <input type="hidden" name="QuizId" value="@Model.QuizId" />
                            <div class="mb-3">
                                <label asp-for="Tittle" class="form-label">Question Title</label>
                                <input asp-for="Tittle" class="form-control" placeholder="Enter question title" required>
                                <span asp-validation-for="Tittle" class="text-danger"></span>
                            </div>

                       @*      <div class="mb-3">
                                <label asp-for="QuizId" class="form-label">Quiz ID</label>
                                <input asp-for="QuizId" class="form-control" placeholder="Enter Quiz ID" required>
                                <span asp-validation-for="QuizId" class="text-danger"></span>
                            </div> *@

                            <div class="mb-3">
                                <label class="form-label">Options</label>
                                <div id="options-container">
                                    @for (int i = 0; i < Model.Options.Count; i++)
                                    {
                                        <div class="input-group mb-2">
                                            <input asp-for="@Model.Options[i].OptionText" class="form-control" placeholder="Option @(i + 1)" required />
                                            <div class="input-group-text">
                                                <input type="radio" asp-for="@Model.CorrectAnswer" name="CorrectAnswer" value="@Model.Options[i].OptionText" required />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <button type="submit" class="btn btn-dark-orange w-100">Create Question</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
